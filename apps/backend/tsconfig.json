{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@pink/shared": ["../../packages/shared/src/index.ts"],
      "@shared/*": ["./src/shared/*"],
      "@config/*": ["./src/config/*"],
      "@modules/*": ["./src/modules/*"],
      "@comics/*": ["./src/modules/comics/*"],
      "@issues/*": ["./src/modules/issues/*"],
      "@authors/*": ["./src/modules/authors/*"]
    }
  },
  "include": ["src/**/*", "src/tests/**/*"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}
