{
  "name": "pink",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter='*' dev",
    "dev:backend": "bun --watch index.ts",
    "dev:frontend": "bun --cwd apps/frontend run dev",
    "build": "bun run --filter='*' build",
    "build:backend": "bun build index.ts --outdir dist/backend --target bun",
    "build:frontend": "bun --cwd apps/frontend run build",
    "test": "bun test",
    "test:backend": "bun --cwd apps/backend test",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules dist"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  }
}
